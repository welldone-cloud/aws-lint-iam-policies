            "Resource": "*"
        },
        {
            "Sid": "AllowLintingPoliciesForAPIGatewayRESTAPIs",
            "Effect": "Allow",
            "Action": "apigateway:GET",
            "Resource": "arn:aws:apigateway:*::/restapis"
        }
    ]
